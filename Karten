public class Karten {
    private String farbe; 
    private int ziffer; 

    public Karten(String pFarbe, int pZiffer) {
        
    }

    public String getFarbe(){

    }

    public int getZiffer(){

    }

    public ArrayList<Karte> getKartenSet(){
        ArrayList<Karte> karten = new ArrayList<>();
        ArrayList<Karte> farben = new ArrayList<>();
        ArrayList<Karte> ziffern = new ArrayList<>();
        ArrayList<Karte>  sonderzeichen = new ArrayList<>();

        farben.add("Rot");
        farben.add("Blau");
        farben.add("Gelb");
        farben.add("Grün");

        for(int i = 0; i < 10; i++){
            ziffern.add(""+i);
        }

        sonderzeichen.add("Aussetzen");
        sonderzeichen.add("Zwei ziehen");
        sonderzeichen.add("Vier ziehen");
        sonderzeichen.add("Richtungswechsel");
        sonderzeichen.add("Farbwechsel");

        for (String farbe : farben) {
            karten.add(farbe + " " + "0"); // Füge die Nullkarten hinzu
            for (String zahl : ziffern.subList(1, ziffern.size())) {
                karten.add(farbe + " " + zahl); // Füge die Ziffernkarten hinzu
            }
            for (String sonderzeichen : sonderzeichen) {
                karten.add(farbe + " " + sonderzeichen); // Füge die Sonderzeichenkarten hinzu
            }
        }

        for (String sonderzeichen : sonderzeichen) {
            karten.add("Schwarz " + sonderzeichen); // Füge die schwarzen Sonderzeichenkarten hinzu
            karten.add("Schwarz " + sonderzeichen);
        }

        for (String zahl : ziffern) {
            karten.add("Schwarz " + zahl); // Füge die schwarzen Ziffernkarten hinzu
            karten.add("Schwarz " + zahl);
        }
    }
}
