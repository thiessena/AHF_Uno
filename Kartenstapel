import java.util.ArrayList;
import java.util.Collections;
import java.util.List;

public class Kartenstapel {
    private List<Kartenstapel> cards;

    public Kartenstapel() {
        cards = new ArrayList<>();
        // Erstelle alle Karten im Uno-Deck

        // Mische die Karten
        shuffle();
    }

    public void shuffle() {
        Collections.shuffle(cards);
    }

    public Karten drawCard() {
        if (cards.isEmpty()) {
            return null; // Keine Karten mehr im Stapel
        }
        return cards.remove(cards.size() - 1);
    }

    public int getSize() {
        return cards.size();
    }
}

//Diese Klasse verwendet eine andere Klasse Karten, die die einzelnen Karten repräsentiert.

public class Karten {
    private List<String> karten;
    private List<String> farben;
    private List<String> ziffern;
    private List<String> sonderzeichen;

    public Karten() {
        karten = new ArrayList<>();
        farben = new ArrayList<>();
        ziffern = new ArrayList<>();
        sonderzeichen = new ArrayList<>();

        farben.add("Rot");
        farben.add("Blau");
        farben.add("Gelb");
        farben.add("Grün");

        ziffern.add("0");
        ziffern.add("1");
        ziffern.add("2");
        ziffern.add("3");
        ziffern.add("4");
        ziffern.add("5");
        ziffern.add("6");
        ziffern.add("7");
        ziffern.add("8");
        ziffern.add("9");

        sonderzeichen.add("Aussetzen");
        sonderzeichen.add("Zwei ziehen");
        sonderzeichen.add("Vier ziehen");
        sonderzeichen.add("Richtungswechsel");
        sonderzeichen.add("Farbwechsel");

        for (String farbe : farben) {
            karten.add(farbe + " " + "0"); // Füge die Nullkarten hinzu
            for (String zahl : ziffern.subList(1, ziffern.size())) {
                karten.add(farbe + " " + zahl); // Füge die Ziffernkarten hinzu
            }
            for (String sonderzeichen : sonderzeichen) {
                karten.add(farbe + " " + sonderzeichen); // Füge die Sonderzeichenkarten hinzu
            }
        }

        for (String sonderzeichen : sonderzeichen) {
            karten.add("Schwarz " + sonderzeichen); // Füge die schwarzen Sonderzeichenkarten hinzu
            karten.add("Schwarz " + sonderzeichen);
        }

        for (String zahl : ziffern) {
            karten.add("Schwarz " + zahl); // Füge die schwarzen Ziffernkarten hinzu
            karten.add("Schwarz " + zahl);
        }
    }

    public void mischen() {
        Collections.shuffle(karten);
    }

    public String ziehen() {
        if (karten.size() > 0) {
            return karten.remove(karten.size() - 1);
        } else {
            return null;
        }
    }

    public void karteHinzufuegen(String karte) {
        karten.add(karte);
    }

    public int anzahlKarten() {
        return karten.size();
    }
}
